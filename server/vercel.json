{
  "version": 2,
  "builds": [
    { "src": "server.mjs", "use": "@vercel/node" },
    { "src": "cron.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.mjs" },
    { "src": "/cron", "dest": "/cron.mjs" }
  ],
  "git": {
    "ignoreBranches": ["gh-pages", "client-only"]
  },
  "crons": [
    {
      "path": "/cron",
      "schedule": "49 17 * * *"
    }
  ]
}
